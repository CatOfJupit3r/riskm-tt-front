{
    "compilerOptions" : {
        "target" : "es5",
        "lib" : [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "baseUrl" : ".",
        "paths" : {
            "@components/*" : [
                "./components/*"
            ],
            "@pages/*" : [
                "./pages/*"
            ],
            "@lib/*" : [
                "./lib/*"
            ],
            "@services/*" : [
                "./services/*"
            ],
            "@models/*" : [
                "./models/*"
            ],
            "config" : [
                "./config"
            ]
        },
        "allowJs" : true,
        "skipLibCheck" : true,
        "esModuleInterop" : true,
        "allowSyntheticDefaultImports" : true,
        "strict" : true,
        "forceConsistentCasingInFileNames" : true,
        "noFallthroughCasesInSwitch" : true,
        "module" : "esnext",
        "moduleResolution" : "node",
        "resolveJsonModule" : true,
        "isolatedModules" : true,
        "noEmit" : true,
        "jsx" : "react-jsx"
    },
    "include" : [
        "src"
    ]
}
